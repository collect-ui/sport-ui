{
  "tag": "layout-fit",
  "className": "overflow-auto",
  "initStore": {
    "phone_group": null,
    "course_in_grade": null,
    "student_list": []
  },
  "initAction": [
    {
      "tag": "ajax",
      "group": "reload-data",
      "api": "post:/template_data/data?service=chart.course_in_analyst",
      "data": {
      },
      "adapt": {
        "phone_group": "${data.phone_group}",
        "course_in_grade": "${data.course_in_grade}",
        "student_list": "${data.student_list}"
      }
    }
  ],
  "style": {
    "backgroundImage": "url(/data/img/page_bg.png)",
    "fontFamily": "'Microsoft YaHei' !important",
    "margin": "0px 0px",
    "padding": "0px, 0px",
    "color": "#20DFE2",
    "overflowX": "hidden",
    "backgroundRepeat": "no-repeat",
    "backgroundSize": "100% 100%",
    "display": "flex",
    "flexDirection": "column"
  },
  "children": [
    {
      "tag": "div",
      "style": {
        "backgroundImage": "url(/data/img/top_bg1.png)",
        "backgroundPosition": "center bottom",
        "backgroundRepeat": "no-repeat",
        "backgroundSize": "auto 100%",
        "height": "60px",
        "textAlign": "center",
        "lineHeight": "60px"
      },
      "children": [
        {
          "tag": "span",
          "style": {
            "fontSize": "26px",
            "letterSpacing": "0.2rem",
            "fontWeight": "bold",
            "fontFamily": "Microsoft YaHei",
            "backgroundImage": "-webkit-gradient(linear, 0 0, 0 bottom, from(rgba(46, 233, 216, 1)), to(rgba(47, 129, 237, 1)))",
            "WebkitBackgroundClip": "text",
            "WebkitTextFillColor": "transparent"
          },
          "children": [
            "2024级汽车服务与营销专业比亚迪订单班课堂评分"
          ]
        }
      ]
    },
    {
      "tag": "row",
      "style": {
        "flex": 1,
        "overflow": "hidden"
      },
      "children": [
        {
          "tag": "col",
          "span": 8,
          "style": {
            "padding": "10px 10px 10px 10px"
          },
          "children": [
            {
              "style": {
                "height": "100%",
                "backgroundImage": "url(/data/img/6.png)",
