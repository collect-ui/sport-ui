              "children": [
                {
                  "tag": "span",
                  "children": [
                    {
                      "tag": "listview",
                      "keyField": "id",
                      "itemData": "${student_list}",
                      "itemAttr": {
                        "tag": "div",
                        "style": {
                          "cursor": "pointer",
                          "color": "#00FCFC",
                          "backgroundImage": "url(/data/img/topbg2.png)",
                          "backgroundPosition": "center center",
                          "backgroundRepeat": "no-repeat",
                          "backgroundSize": "100% 100%",
                          "display": "inline-block",
                          "margin": "10px",
                          "textAlign": "center",
                          "padding": "5px",
                          "width": "150px",
                          "height": "40px",
                          "lineHeight": "30px",
                          "fontSize": "16px",
                          "fontWeight": "bold",
                          "alignContent": "center",
                          "boxSizing": "border-box"
                        },
